{
  "name": "pay-buddy",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "set-build-env": "cd scripts/ && node gitIgnoreForBuild.js && cd ..",
    "clean-build-env": "cd scripts/ && node gitIgnoreRevert.js && cd ..",
    "build-prev": "yarn set-build-env && eas build -p android --profile preview --local && yarn clean-build-env",
    "build-dev": "yarn set-build-env && eas build -p android --profile development --local && yarn clean-build-env",
    "build-prod": "yarn set-build-env && eas build -p android --profile production --local && yarn clean-build-env",
    "build-play": "yarn set-build-env && eas build -p android --profile play --local && yarn clean-build-env",
    "c-git": "git clean -fd",
    "run-ios": "yarn set-build-env && npx expo prebuild -p ios && yarn ios",
    "clean-ios": "yarn clean-build-env && rm -rf ios && git checkout -- package.json"
  },
  "dependencies": {
    "@react-native-firebase/app": "^20.3.0",
    "@react-native-firebase/auth": "^20.3.0",
    "@react-native-firebase/crashlytics": "^20.3.0",
    "@react-native-firebase/firestore": "^20.3.0",
    "@react-native-firebase/storage": "^20.3.0",
    "@react-native-google-signin/google-signin": "^12.2.1",
    "@react-navigation/bottom-tabs": "^6.6.1",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/native-stack": "^6.11.0",
    "expo": "~51.0.26",
    "expo-build-properties": "~0.12.5",
    "expo-dev-client": "~4.0.22",
    "expo-font": "~12.0.9",
    "expo-image-picker": "~15.0.7",
    "expo-navigation-bar": "~3.0.7",
    "expo-notifications": "~0.28.15",
    "expo-splash-screen": "~0.27.5",
    "expo-status-bar": "~1.12.1",
    "expo-updates": "~0.25.22",
    "react": "18.2.0",
    "react-native": "0.74.5",
    "react-native-mmkv": "^2.12.2",
    "react-native-safe-area-context": "4.10.5",
    "react-native-screens": "3.31.1",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@eslint/js": "^9.8.0",
    "@types/react": "~18.2.45",
    "eslint": "9.x",
    "eslint-plugin-react": "^7.35.0",
    "globals": "^15.9.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3",
    "typescript-eslint": "^8.0.0"
  },
  "private": true
}