    "./node_modules/expo/tsconfig.base.json"
  ],
  "compilerOptions": {
    "jsx": "react",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@components": [
        "./packages/components/index.ts"
      ],
      "@styles": [
        "./packages/styles/index.ts"
      ],
      "@types": [
        "./packages/types/index.ts"
      ],
      "@zustand": [
        "./packages/zustand/index.ts"
      ],
    },
  },
}